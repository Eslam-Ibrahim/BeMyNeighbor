@{
  Layout = "../Shared/_UserMainLayout.cshtml";
}
@model List<BeMyNeighbor.Data.Entities.UsersEvaluation>

<head>
    <title>Evaluation History</title>
    <style>
        table {
        border-collapse: collapse;
        width: 100%;
        }
        th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        tr:hover {background-color:#f5f5f5;}
		
        p {
			border-left: 6px solid FireBrick;
			background-color: LightSteelBlue;
        }
    </style>
</head>

<center>
    <h1> Evaluation History </h1>

    @{
        if (Model.Count == 0){
            <p>You didn't participate in a community service yet!</p>
        }else{
            foreach (var item in Model){
                <table>
                    <tr>
                        <th>Post #</th>
                        <th>Task Description</th>
                        <th>Total Score</th>
                    </tr>
                    <tr>
                        <td>@item.PostId</td>
                        <td>@item.TaskType.TaskDescription</td>
                        <td>@item.TotalScore</td>
                    </tr>
                </table>
                <table>
                    <tr>
                        <th>Question # </th>
                        <th>Question Description</th>
                        <th>Question Score</th>
                    </tr>
                @for (int i = 0; i < @item.EvaluationQuestions.ToList().Count; i++){
                    <tr>
                        <td>@(i+1)</td>
                        <td>@item.EvaluationQuestions.ToList()[i].Question.QuestionText</td>
                        <td>@item.EvaluationQuestions.ToList()[i].QuestionScore</td>
                    </tr>
                }    
                </table>
                <hr>
                <br>
            }
        }
    }
</center>