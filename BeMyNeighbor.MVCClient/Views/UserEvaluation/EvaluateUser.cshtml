@model List<BeMyNeighbor.Data.Entities.Questions>

	@{
		Layout = null;
	}

	<head>
    <title>User Evaluation Page</title>
		<style>
        table {
        border-collapse: collapse;
        width: 100%;
        }

        th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        tr:hover {background-color:#f5f5f5;}
    </style>
</head>


<center>
	
	<form name="EvaluateUserForm" id="EvaluateUserForm" action="SubmitEvaluation" method="post">

		<table>
        	<tr>
            <th>Question Text</th>
            <th>Question Answer</th>
          </tr>
	@foreach (var item in Model){
		  	<tr>
              <td>@item.QuestionText</td>
              <td> <input type=number name="QuestionScore"  min ="1" max="10" required></td>
              </tr>
          }    
            </table>
		<input type=hidden name="postID" value ="1" >
		<input type=hidden name="userID" value ="1" >
		<input type=hidden name="taskTypeID" value = "100">
		<input type="submit" value="Submit Evaluation">
		@Html.AntiForgeryToken()
	</form>
</center>